<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.osmany.cajabar.MainActivity">

    <TextView
        android:id="@+id/Pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedido"/>



    <ScrollView
        android:id="@+id/scroll_avtivity_main"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/Pedido">

        <LinearLayout
            android:id="@+id/linea_del_Scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/scroll_avtivity_main"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_impuestos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll_avtivity_main"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_impuesto_main_activity"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="IGIC"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_porcentaje_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="6%" />

            <TextView
                android:id="@+id/tv_total_impuestos_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_impuestos"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:text="Total"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_cantidad_total_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" />

            <TextView
                android:id="@+id/tv_total_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

        </FrameLayout>
    </LinearLayout>

    <Button
            android:id="@+id/btn_añadir_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="añadir" />

    <Button
            android:id="@+id/Boton_Enviar"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Enviar" />

    <Button
        android:id="@+id/btn_cancelar_main_activity"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Cancelar" />


</RelativeLayout>
